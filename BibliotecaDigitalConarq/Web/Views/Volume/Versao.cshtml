@model Core.Objetos.Volume

@{
    ViewBag.Title = "Biblioteca Digital - Listando versões do volume";
}

<h2>Versões do volume @Html.DisplayFor(model => model.VersaoAtual.NumeroDoVolume) </h2>

<ul>
@foreach (var item in Model.Versoes)
{
    <li><a href="@Url.RouteUrl("VersaoVolume", new { idVolume = Model.Id,  idVersao = item.NumeroDaVersao, action = "Versao"})">Versão @(item.NumeroDaVersao)</a></li>
}
</ul>