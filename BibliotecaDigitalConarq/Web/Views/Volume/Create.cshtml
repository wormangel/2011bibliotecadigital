@model Core.Objetos.Volume
@using Web.Extensions           

@{
    ViewBag.Title = "Biblioteca Digital - Novo volume";
}

<h2>Novo volume</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Preencha o formulário</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumeroDoVolume)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumeroDoVolume)
            @Html.ValidationMessageFor(model => model.NumeroDoVolume)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TipoDoMeio)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.TipoDoMeio)
            @Html.ValidationMessageFor(model => model.TipoDoMeio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuantidadeDeFolhas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuantidadeDeFolhas)
            @Html.ValidationMessageFor(model => model.QuantidadeDeFolhas)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Localizacao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Localizacao)
            @Html.ValidationMessageFor(model => model.Localizacao)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
