@using Web.Extensions
@model Core.Objetos.Temporalidade

@{
    ViewBag.Title = "Criar";
}

<h2>Criar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Regra de temporalidade para a classe @ViewBag.NomeDaClasse</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrazoDeGuardaFaseCorrente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrazoDeGuardaFaseCorrente)
            @Html.ValidationMessageFor(model => model.PrazoDeGuardaFaseCorrente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrazoDeGuardaFaseIntermediaria)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrazoDeGuardaFaseIntermediaria)
            @Html.ValidationMessageFor(model => model.PrazoDeGuardaFaseIntermediaria)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DestinacaoFinal)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.DestinacaoFinal)
            @Html.ValidationMessageFor(model => model.DestinacaoFinal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Observacoes)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Observacoes)
            @Html.ValidationMessageFor(model => model.Observacoes)
        </div>

        <p>
            <input type="submit" value="Criar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
