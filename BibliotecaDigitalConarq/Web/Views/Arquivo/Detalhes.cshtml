@model Core.Objetos.Arquivo

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<fieldset>
    <legend>Arquivo</legend>

    <div class="display-label">Nome</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nome)
    </div>

    <div class="display-label">Caracteristicas</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Caracteristicas)
    </div>

    <div class="display-label">Formato</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Formato)
    </div>

    <div class="display-label">Armazenamento</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Armazenamento)
    </div>

    <div class="display-label">AmbienteSoftware</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AmbienteSoftware)
    </div>

    <div class="display-label">AmbienteHardware</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AmbienteHardware)
    </div>

    <div class="display-label">Dependencias</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Dependencias)
    </div>

    <div class="display-label">Conteúdo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Conteudo)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Editar", new { id=Model.ArquivoId }) |
    @Html.ActionLink("Retornar para a lista", "Index")
</p>
