@model IQueryable<Core.Objetos.Documento>

@{
    ViewBag.Title = "Biblioteca Digital - Listando documentos";
}

<h2>Listando documentos do volume <a href="/DocumentoArquivistico/@(ViewBag.IdDocArq)/Volume/Details/@(ViewBag.IdVol)">@(ViewBag.NrVolume)</a> do @(ViewBag.TipoDocArq) <a href="/DocumentoArquivistico/Details/@(ViewBag.IdDocArq)">@(ViewBag.TituloDocArq)</a></h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
<table>
    <tr>
        <th>
            Número
        </th>
        <th>
            Nr. do protocolo
        </th>
        <th>
            Titulo
        </th>
        <th>
            Descrição
        </th>
        <th>
            Assunto
        </th>
        <th>
            Autor
        </th>
        <th>
            Destinatário
        </th>
        <th>
            Originador
        </th>
        <th>
            Redator
        </th>
        <th>
            Procedência
        </th>
        <th>
            Id arquivo
        </th>
        <th>
            Gênero
        </th>
        <th>
            Espécie
        </th>
        <th>
            Tipo
        </th>
        <th>
            Idioma
        </th>
        <th>
            Quantidade de folhas
        </th>
        <th>
            Possui anexos?
        </th>
        <th>
            Data de produção
        </th>
        <th>
            Classe
        </th>
        <th>
            Prazo de guarda
        </th>
        <th>
            Localização
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.NumeroDoDocumento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.NumeroDoProtocolo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Assunto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Destinatario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Originador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Redator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Procedencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdArquivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Especie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Idioma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.QuantidadeDeFolhas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.TemAnexos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.DataDeProducao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Classe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.PrazoDeGuarda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersaoAtual.Localizacao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Visualizar", "Details", new { id=item.Id }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
