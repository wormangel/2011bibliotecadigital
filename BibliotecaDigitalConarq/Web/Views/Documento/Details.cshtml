@model Core.Objetos.Documento
@using Web.Extensions

@{
    ViewBag.Title = "Biblioteca Digital - Detalhes do " + @Html.DisplayFor(model => model.VersaoAtual.Titulo);
}

<h2>Detalhes do @Html.DisplayFor(model => model.VersaoAtual.Titulo)</h2>

<fieldset>
    <legend>Dados</legend>

    <div class="display-label">Número</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.NumeroDoDocumento)
    </div>

    <div class="display-label">Nr. documento arquivístico</div>
    <div class="display-field">
        <a href="@Url.RouteUrl("Default", new { id = Model.IdProcessoDossie, controller = "DocumentoArquivistico", action = "Details" })">@Html.DisplayFor(model => model.Volume.NumeroDoProcessoOuDossie)</a>
    </div>

    <div class="display-label">Nr. volume</div>
    <div class="display-field">
        <a href="@Url.RouteUrl("Volume", new { idDocArq = Model.Volume.DocumentoArquivistico.Id, id = Model.Volume.Id, action = "Details" })">@Html.DisplayFor(model => model.Volume.VersaoAtual.NumeroDoVolume)</a>
    </div>

    <div class="display-label">Nr. do protocolo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.NumeroDoProtocolo)
    </div>

    <div class="display-label">Título</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.Titulo)
    </div>

    <div class="display-label">Tipo do título</div>
