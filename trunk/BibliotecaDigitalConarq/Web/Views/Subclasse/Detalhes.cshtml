@model Core.Objetos.Classificacoes.Subclasse

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes da subclasse @Model.Nome</h2>

<ul>
    <li><a href="@Url.RouteUrl("Grupo", new { action = "Criar", idClasse = Model.Classe.Id, idSubclasse = Model.Id })">Criar grupo</a></li>
    <li><a href="@Url.RouteUrl("DocumentoArquivistico", new { classificacao = "Classe", idClassificacao = Model.Classe.Id, action = "Criar" })">Criar documento arquivístico</a></li>
</ul>

@if (Model.Grupos.Count > 0)
{
    <h3>Grupos</h3>
    <ul>
    @foreach (var item in Model.Grupos)
    {
        <li><a href="@Url.RouteUrl("Grupo", new { action = "Detalhes", idClasse = Model.Classe.Id, idSubclasse = Model.Id, id = item.Id })">@item.Nome</a></li>
    }
    </ul>
}

@if (Model.DocumentosArquivisticos.Count > 0)
{
    <h3>Documentos arquivísticos</h3>
    <ul>
    @foreach (var item in Model.DocumentosArquivisticos)
    {
        <li><a href="@Url.RouteUrl("Default", new { controller = "DocumentoArquivistico", action = "Detalhes", id = item.Id })">@item.VersaoAtual.Titulo</a></li>
    }
    </ul>
}

<fieldset>
    <legend>Subclasse</legend>

    <div class="display-label">Nome</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nome)
    </div>

    <div class="display-label">Codigo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Codigo)
    </div>

    <div class="display-label">Ativa</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Ativa)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar metadados", "Editar", new { id=Model.Id }) |
</p>
