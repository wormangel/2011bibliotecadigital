@model Core.Objetos.DocumentoArquivistico

@{
    ViewBag.Title = "Biblioteca Digital - Listando versões do documento arquivístico";
}

<h2>Versões do documentos arquivístico @Html.DisplayFor(model => model.VersaoAtual.Titulo) </h2>

<ul>
@foreach (var item in Model.Versoes)
{
    <li><a href="@Url.RouteUrl("VersaoDocumentoArquivistico", new { idDocArq = Model.Id,  idVersao = item.NumeroDaVersao, action = "Versao"})">Versão @(item.NumeroDaVersao)</a></li>
}
</ul>