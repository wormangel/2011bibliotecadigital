@model Core.Objetos.DocumentoArquivistico
@using Web.Extensions

@{
    ViewBag.Title = "Biblioteca Digital - Detalhes do " + @Html.DisplayFor(model => model.Titulo);
}

<h2>Detalhes do @Html.DisplayFor(model => model.Titulo)</h2>

<fieldset>
    <legend>Dados</legend>

    <div class="display-label">Número</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NumeroDoProcessoOuDossie)
    </div>

    <div class="display-label">Tipo do meio</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TipoDoMeio)
    </div>

    <div class="display-label">Título</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Titulo)
    </div>

    <div class="display-label">Tipo do título</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TipoDoTitulo)
    </div>

    <div class="display-label">Descrição</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Descricao)
    </div>

    <div class="display-label">Assunto</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Assunto)
    </div>

    <div class="display-label">Autor</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Autor)
    </div>

    <div class="display-label">Destinatário</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Destinatario)
    </div>

    <div class="display-label">Tipo do destinatário</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TipoDoDestinatario)
    </div>

    <div class="display-label">Interessado</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Interessado)
    </div>

    <div class="display-label">Procedência</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Procedencia)
    </div>

    <div class="display-label">Quantidade de folhas</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.QuantidadeDeFolhas)
    </div>

    <div class="display-label">Numeração sequencial</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NumeracaoSequencialDosDocumentos)
    </div>

    <div class="display-label">Data de produção</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DataDeProducao)
    </div>

    <div class="display-label">Classe</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Classe)
    </div>

    <div class="display-label">Destinação prevista</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DestinacaoPrevista)
    </div>

    <div class="display-label">Prazo de guarda</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PrazoDeGuarda)
    </div>

    <div class="display-label">Localização</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Localizacao)
    </div>

    <div class="display-label">Volumes <a href="@Url.RouteUrl("Volume", new { idDocArq = Model.Id, action = "Create"})">Criar volume</a></div>
    <div class="display-field">
        @if (Model.Volumes != null)
        {
            <ul>
            @foreach (var item in Model.Volumes.Where(v => v.IdProcessoDossie == Model.Id).ToList())
            {
                <li><a href="@Url.RouteUrl("Volume", new { idDocArq = item.IdProcessoDossie, action = "Details", id = item.Id })">Volume @(item.NumeroDoVolume)</a></li>
            }
            </ul>
        }
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar para a lista", "Index")
</p>
