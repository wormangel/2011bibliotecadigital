@model Web.ViewModels.Arquivo.CreateArquivoViewModel

@{
    ViewBag.Title = "Criar";
}

<h2>Criar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<form method="post" action="@Url.Action("Criar")" enctype="multipart/form-data">
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Arquivo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Arquivo.Caracteristicas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Arquivo.Caracteristicas)
            @Html.ValidationMessageFor(model => model.Arquivo.Caracteristicas)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Arquivo.Armazenamento)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Arquivo.Armazenamento)
            @Html.ValidationMessageFor(model => model.Arquivo.Armazenamento)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Arquivo.AmbienteSoftware)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Arquivo.AmbienteSoftware)
            @Html.ValidationMessageFor(model => model.Arquivo.AmbienteSoftware)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Arquivo.AmbienteHardware)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Arquivo.AmbienteHardware)
            @Html.ValidationMessageFor(model => model.Arquivo.AmbienteHardware)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Arquivo.Dependencias)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Arquivo.Dependencias)
            @Html.ValidationMessageFor(model => model.Arquivo.Dependencias)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Anexo)
        </div>
        <div class="editor-field">
            <input id="Anexo" type="file" name="Anexo" />
            @Html.ValidationMessageFor(model => model.Anexo)
        </div>

        <p>
            <input type="submit" value="Criar" />
        </p>
    </fieldset>
</form>

<div>
    @Html.ActionLink("Retornar para a lista", "Index")
</div>
