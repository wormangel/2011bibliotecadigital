        @Html.DisplayFor(model => model.VersaoAtual.Tipo)
    </div>

    <div class="display-label">Idioma</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.Idioma)
    </div>

    <div class="display-label">Quantidade de folhas</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.QuantidadeDeFolhas)
    </div>

