        @Html.DisplayFor(model => model.VersaoAtual.NumeroDoDocumento)
    </div>

    <div class="display-label">Nr. do protocolo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.NumeroDoProtocolo)
    </div>

    <div class="display-label">Id doc. arquivístico</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IdProcessoDossie)
    </div>

    <div class="display-label">Id volume</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IdVolume)
    </div>

    <div class="display-label">Título</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.Titulo)
    </div>

    <div class="display-label">Descrição</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.Descricao)
    </div>

    <div class="display-label">Assunto</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.Assunto)
    </div>

    <div class="display-label">Autor</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.Autor)
    </div>

    <div class="display-label">Destinatário</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VersaoAtual.Destinatario)
