@model Core.Objetos.Documento

@{
    ViewBag.Title = "Biblioteca Digital - Remover " + @Html.DisplayFor(model => model.VersaoAtual.Titulo) + "?";
}

<h2>Você tem certeza que deseja remover o @Html.DisplayFor(model => model.VersaoAtual.Titulo)?</h2>

