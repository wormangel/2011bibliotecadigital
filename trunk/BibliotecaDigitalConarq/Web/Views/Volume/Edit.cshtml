@model Web.ViewModels.Volume.EditVolumeViewModel
@using Web.Extensions           

@{
    ViewBag.Title = "Biblioteca Digital - Editando volume " + @Html.DisplayFor(model => model.VersaoNova.NumeroDoVolume);
}

<h2>Editando volume @Html.DisplayFor(model => model.VersaoNova.NumeroDoVolume)</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Atualize os campos do formulário</legend>

        @Html.HiddenFor(model => model.Volume.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.VersaoNova.NumeroDoVolume)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VersaoNova.NumeroDoVolume)
            @Html.ValidationMessageFor(model => model.VersaoNova.NumeroDoVolume)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VersaoNova.TipoDoMeio)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.VersaoNova.TipoDoMeio)
            @Html.ValidationMessageFor(model => model.VersaoNova.TipoDoMeio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VersaoNova.QuantidadeDeFolhas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VersaoNova.QuantidadeDeFolhas)
            @Html.ValidationMessageFor(model => model.VersaoNova.QuantidadeDeFolhas)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VersaoNova.Localizacao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VersaoNova.Localizacao)
            @Html.ValidationMessageFor(model => model.VersaoNova.Localizacao)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para a lista", "Index")
</div>
